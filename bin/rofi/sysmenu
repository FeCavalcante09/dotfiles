#!/usr/bin/env bash

MENU="$(rofi -no-lazy-grab -sep "|" -dmenu -theme ~/.config/rofi/sysmenu.rasi \
    <<< "  Lock|  Suspend|  Logout|  Reboot|  Shutdown")"

case "$MENU" in
  *Lock) betterlockscreen -l ;;
  *Suspend) betterlockscreen -s ;;
  *Logout) bspc quit ;;
  *Reboot) systemctl reboot ;;
  *Shutdown) systemctl -i poweroff ;;
esac
